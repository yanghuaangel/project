<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".AZchooseActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.example.myapplication.myview.BladeView
            android:id="@+id/country_list_letters"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="right" />

        <ImageView
            android:id="@+id/letter_selector_thumb"
            android:layout_width="51dp"
            android:layout_height="41.67dp"
            android:layout_gravity="right"
            android:scaleType="fitXY"
            android:src="@drawable/letter_selector_thumb"
            android:visibility="visible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/letter_selector_txt"
            android:layout_width="41.67dp"
            android:layout_height="41.67dp"
            android:ellipsize="middle"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:visibility="visible" />
    </FrameLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>